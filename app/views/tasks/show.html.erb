<div class="Task">
  <h1><%= @task.title %></h1>
  <p><%= @task.body %></p>
</div>

<button><%= link_to 'Back', tasks_path %></button>
<button><%= link_to 'Edit', edit_task_path(@task) %></button>
<button><%= link_to 'Delete', task_path, method: :delete, data: { confirm: 'Are you sure?' } %></button>
