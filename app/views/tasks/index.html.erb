<div class="TaskList">
  <h1>TODO List</h1>
  <% @tasks.each do |task| %>
    <%= link_to task_path(id: task.id) do %>
      <div class="Task">
        <span><b><%= task.title %></b></span>
      </div>
    <% end %>
    <hr>
  <% end %>

  <%= button_to 'Create task', new_task_path, method: :get %>
</div>
