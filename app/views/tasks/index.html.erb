<div class="task-list">
  <h1>TODO List</h1>
  <% @tasks.each do |task| %>
    <%= link_to task_path(id: task.id), class: "task-link" do %>
      <div class="task">
        <span><b><%= task.title %></b></span>
      </div>
    <% end %>
  <% end %>

  <%= button_to 'Create task', new_task_path, method: :get %>
</div>
